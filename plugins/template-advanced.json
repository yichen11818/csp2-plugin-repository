{
  "$schema": "../schemas/plugin.schema.json",
  "id": "your-plugin-id",
  "enabled": false,
  "autoUpdate": true,
  "repository": {
    "type": "github",
    "owner": "your-github-username",
    "repo": "your-plugin-repository",
    "releaseType": "latest"
  },
  "downloadPattern": "YourPluginName.zip",
  "metadata": {
    "name": "Your Plugin Display Name",
    "description": "Plugin description in English (required)",
    "descriptionZh": "插件的中文描述（可选，但推荐提供）",
    "category": "gameplay",
    "tags": ["tag1", "tag2", "tag3"],
    "framework": "counterstrikesharp",
    "frameworkVersion": ">=1.0.0",
    "featured": false
  },
  "dependencies": [
    "dependency-plugin-id-1",
    "dependency-plugin-id-2"
  ],
  "installation": {
    "type": "extract",
    "mappings": [
      {
        "source": "addons/counterstrikesharp/plugins/YourPlugin/*",
        "target": "game/csgo/addons/counterstrikesharp/plugins/YourPlugin",
        "recursive": true
      },
      {
        "source": "addons/counterstrikesharp/gamedata/*",
        "target": "game/csgo/addons/counterstrikesharp/gamedata",
        "recursive": true
      },
      {
        "source": "addons/counterstrikesharp/configs/plugins/YourPlugin/*",
        "target": "game/csgo/addons/counterstrikesharp/configs/plugins/YourPlugin",
        "recursive": true,
        "exclude": ["*.example", "*.template"]
      }
    ],
    "requiresRestart": true
  },
  "verification": {
    "method": "community",
    "verifiedBy": "your-github-username",
    "verifiedAt": "2025-10-27T00:00:00Z",
    "notes": "Tested on CS2 build XXXXX with CounterStrikeSharp vX.X.X"
  }
}

