{
  "$schema": "../schemas/plugin.schema.json",
  "id": "weaponpaints",
  "enabled": true,
  "autoUpdate": true,
  "repository": {
    "type": "github",
    "owner": "Nereziel",
    "repo": "cs2-WeaponPaints",
    "releaseType": "latest"
  },
  "downloadPattern": "WeaponPaints.zip",
  "metadata": {
    "name": "WeaponPaints",
    "description": "Advanced weapon skin system for CS2 with database storage and custom skin support",
    "descriptionZh": "CS2 高级武器皮肤系统，支持数据库存储和自定义皮肤",
    "category": "gameplay",
    "tags": ["skins", "weapons", "customization", "database", "mysql"],
    "framework": "counterstrikesharp",
    "frameworkVersion": ">=1.0.0",
    "featured": true
  },
  "dependencies": [
    "anybaselib-cs2",
    "menumanager-cs2",
    "playersettings-cs2"
  ],
  "installation": {
    "type": "extract",
    "mappings": [
      {
        "source": "addons/counterstrikesharp/plugins/WeaponPaints/*",
        "target": "game/csgo/addons/counterstrikesharp/plugins/WeaponPaints",
        "recursive": true
      },
      {
        "source": "addons/counterstrikesharp/gamedata/*",
        "target": "game/csgo/addons/counterstrikesharp/gamedata",
        "recursive": true
      },
      {
        "source": "addons/counterstrikesharp/configs/plugins/WeaponPaints/*",
        "target": "game/csgo/addons/counterstrikesharp/configs/plugins/WeaponPaints",
        "recursive": true
      }
    ],
    "requiresRestart": true
  },
  "verification": {
    "method": "github-verified",
    "verifiedBy": "csp2-team",
    "verifiedAt": "2025-10-27T00:00:00Z",
    "notes": "Popular plugin with active development and good community support. Note: This plugin uses build numbers instead of semantic versioning."
  }
}

