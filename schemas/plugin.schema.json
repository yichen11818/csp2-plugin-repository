{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/yichen11818/csp2-plugin-repository/main/schemas/plugin.schema.json",
  "title": "CSP2 Plugin Configuration",
  "description": "Schema for individual plugin configuration files",
  "type": "object",
  "required": ["id", "enabled", "repository"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique plugin identifier (must match filename without .json)"
    },
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Whether this plugin is included in the manifest"
    },
    "autoUpdate": {
      "type": "boolean",
      "default": true,
      "description": "Automatically update from GitHub releases"
    },
    "repository": {
      "type": "object",
      "required": ["type", "owner", "repo"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["github"],
          "description": "Repository type (currently only GitHub is supported)"
        },
        "owner": {
          "type": "string",
          "description": "Repository owner/organization"
        },
        "repo": {
          "type": "string",
          "description": "Repository name"
        },
        "releaseType": {
          "type": "string",
          "enum": ["latest", "prerelease", "tag"],
          "default": "latest",
          "description": "Which release to track"
        },
        "tagPattern": {
          "type": "string",
          "description": "Tag pattern to match (for releaseType: tag)"
        }
      }
    },
    "downloadPattern": {
      "type": "string",
      "description": "Pattern to match asset filename (e.g., 'PluginName.zip')"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata to override or supplement GitHub data",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "description": "Plugin description in English"
        },
        "descriptionZh": {
          "type": "string",
          "description": "Plugin description in Chinese (optional)"
        },
        "category": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "framework": {
          "type": "string",
          "enum": ["counterstrikesharp", "metamod", "sourcemod"],
          "description": "Required plugin framework"
        },
        "frameworkVersion": {
          "type": "string",
          "description": "Required framework version (e.g., '>=1.0.0', '^2.0.0')",
          "pattern": "^(>=|>|<=|<|\\^|~)?\\d+\\.\\d+\\.\\d+.*$"
        },
        "featured": {
          "type": "boolean",
          "description": "Whether this plugin is featured"
        }
      }
    },
    "installation": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["extract", "copy", "custom"],
          "description": "Installation type"
        },
        "targetPath": {
          "type": "string",
          "description": "Target directory (for simple installations, relative to server root)"
        },
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Files to copy (for simple installations, supports wildcards)"
        },
        "mappings": {
          "type": "array",
          "description": "File mapping rules (for complex installations, takes precedence over targetPath + files)",
          "items": {
            "type": "object",
            "required": ["source", "target"],
            "properties": {
              "source": {
                "type": "string",
                "description": "Source path pattern in ZIP (supports * and ** wildcards, e.g., 'gamedata/*', 'MyPlugin/**/*.dll')"
              },
              "target": {
                "type": "string",
                "description": "Target directory relative to server root (e.g., 'game/csgo/addons/counterstrikesharp/gamedata')"
              },
              "recursive": {
                "type": "boolean",
                "default": true,
                "description": "Whether to copy subdirectories recursively"
              },
              "exclude": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Patterns to exclude from copying"
              }
            }
          }
        },
        "requiresRestart": {
          "type": "boolean",
          "default": true,
          "description": "Whether the server needs to be restarted after installation"
        }
      }
    },
    "dependencies": {
      "type": "array",
      "description": "List of plugin IDs that this plugin depends on",
      "items": {
        "type": "string"
      }
    },
    "verification": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "enum": ["github-verified", "manual", "community"]
        },
        "verifiedBy": {
          "type": "string",
          "description": "Who verified this plugin"
        },
        "verifiedAt": {
          "type": "string",
          "format": "date-time"
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}

